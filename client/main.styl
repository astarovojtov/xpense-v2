@media only screen and (min-width: 300px)
  .row
    main.col.s12
      padding: 0
  #side-nav-button
    line-height: 1.6
  i.material-icons
    font-size: 24px
  .new-expense-container
    margin: 10% 10% 15% 10%
  .add-expense
    .input-field
      label
        font-size: 1rem
        line-height: 1
    .btn
      font-size: 1rem
  .expenses
    margin: 2% 0;
    padding: 2%;
    .update-expense
      input.update
        font-size: 1.1rem
      input[name="name"]
        padding-right:0
      input[name="tag"]
        padding-left:0
        
  form.update-date-and-author
    margin-left: 1rem
    input.edit-author
      padding: 0 0.2rem
    input[name="createdAt"].edit-date,
    input[name="author"].edit-author
      font-size: 0.9rem
    span
      font-size: 0.9rem
  .page-footer
    h5
      font-size: 1.4rem
  h1
    display:none
  .search
    display:none
  .filters
    line-height: 3
  
  .expenses-list
    .no-padding
      ul.collection
        border: none
        border-radius: 0
        -webkit-appearance: none
    .row
      .month,
      .tag
        padding-top: 0
    .row.no-padding
      padding: 0
      .col
        padding: 0
  #ruler
    font-size: 0.9rem
    color: transparent
  .col.total-by-tags
    padding:0
    ul.collection
      border: none
      border-radius: 0
      li.collection-item
        padding: 10px 0

@media only screen and (min-width: 993px)
  .filters
    line-height: 4
    margin: 0
  .expenses-list
    .no-padding
      div
        ul.collection
          border: 1px solid #e0e0e0
          border-radius: 2px
          li.collection-item
            padding: 10px 20px